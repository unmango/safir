root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.proto]
indent_size = 2

[*.{xml,props,targets,Config,*proj}]
indent_size = 2

[Makefile]
indent_style = tab

[*.cs]
indent_size = 4
dotnet_sort_system_directives_first = true

# Microsoft .NET properties
csharp_indent_braces = false
csharp_new_line_before_open_brace = accessors,control_blocks,events,indexers,local_functions,methods,properties,types
csharp_wrap_before_arrow_with_expressions = true
csharp_style_implicit_object_creation_when_type_is_apparent = true

# ReSharper properties
resharper_csharp_other_braces = end_of_line

[*.fs]
indent_size = 4
max_line_length = 120
fsharp_max_if_then_else_short_width = 50 # Default: 40
fsharp_max_record_width = 60 # Default 40
fsharp_max_array_or_list_width = 60 # Default 40
fsharp_max_value_binding_width = 100 # Default 80
# fsharp_max_function_binding_width = 10 # Default 40
fsharp_max_dot_get_expression_width = 25 # Default 50
fsharp_multiline_bracket_style = stroustrup # Default cramped
fsharp_newline_before_multiline_computation_expression = false
fsharp_keep_max_number_of_blank_lines = 1 # Default 100
