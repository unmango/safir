<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Product>Safir.Protos</Product>
    <Description>Generated protocol buffer types for the Safir project.</Description>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net5.0</TargetFrameworks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Safir.Messaging.Abstractions\Safir.Messaging.Abstractions.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.15.8" />
    <PackageReference Include="Grpc" Version="2.37.1" />
    <PackageReference Include="Grpc.Tools" Version="2.37.1" PrivateAssets="All" />
  </ItemGroup>
  
  <ItemGroup>
    <Protobuf Include="../../protos/**/*.proto" />
    <Protobuf Update="..\..\protos\agent\*.proto">
      <Link>Agent\$(FileName).proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
