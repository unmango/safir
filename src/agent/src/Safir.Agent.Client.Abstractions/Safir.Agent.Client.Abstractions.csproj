<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Product>Safir.Agent.Client.Abstractions</Product>
    <RootNamespace>Safir.Agent.Client</RootNamespace>
    <Description>Abstractions for a client that can make requests to a Safir agent.</Description>
    <TargetFrameworks>netstandard2.1;net6.0;net7.0</TargetFrameworks>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Grpc.Core" />
    <PackageReference Include="JetBrains.Annotations" />
    <PackageReference Include="MinVer" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(CommonSrc)\Safir.Protos\Safir.Protos.csproj" />
  </ItemGroup>

</Project>
