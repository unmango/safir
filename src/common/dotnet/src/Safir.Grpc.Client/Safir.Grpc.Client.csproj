<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Product>Safir.Grpc.Client</Product>
    <Description>Client for making requests to a Safir service that implements common grpc services.</Description>
    <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    <IsPackable>true</IsPackable>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Grpc.Net.ClientFactory" Version="2.48.0" />
    <PackageReference Include="IsExternalInit" Version="1.0.3" PrivateAssets="all" />
    <PackageReference Include="JetBrains.Annotations" Version="2022.1.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="6.0.0" />    
  </ItemGroup>
  
  <ItemGroup>
    <ProjectReference Include="$(CommonSrc)\Safir.Grpc.Client.Abstractions\Safir.Grpc.Client.Abstractions.csproj" />
    <ProjectReference Include="$(CommonSrc)\Safir.Protos\Safir.Protos.csproj" />
  </ItemGroup>

</Project>
