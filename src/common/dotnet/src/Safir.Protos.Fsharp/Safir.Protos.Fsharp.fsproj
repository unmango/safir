<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Product>Safir.Protos</Product>
    <Description>Generated protocol buffer types for the Safir project.</Description>
    <TargetFramework>netstandard2.1</TargetFramework>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Api.CommonProtos" />
    <PackageReference Include="Grpc-FSharp.Tools" PrivateAssets="all" />
    <PackageReference Include="Grpc.Core.Api" />
    <PackageReference Include="Protobuf.FSharp" />
  </ItemGroup>

  <!-- https://github.com/grpc/grpc/blob/master/src/csharp/BUILD-INTEGRATION.md -->
  <ItemGroup>
    <Protobuf Include="$(ProtoRoot)/safir/**/*.proto" ProtoRoot="$(ProtoRoot)">
      <Link>%(RecursiveDir)/$(FileName).proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
