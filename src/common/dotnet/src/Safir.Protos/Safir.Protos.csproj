<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Product>Safir.Protos</Product>
    <Description>Generated protocol buffer types for the Safir project.</Description>
    <TargetFrameworks>netstandard2.1;net5.0;net6.0</TargetFrameworks>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Api.CommonProtos" Version="2.5.0" />
    <PackageReference Include="Google.Protobuf" Version="3.20.0" />
    <PackageReference Include="Grpc.Core.Api" Version="2.45.0" />
    <PackageReference Include="Grpc.Tools" Version="2.45.0" PrivateAssets="All" />
    <PackageReference Include="IsExternalInit" Version="1.0.2" PrivateAssets="all" />
    <PackageReference Include="MinVer" Version="3.1.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(CommonSrc)\Safir.Messaging.Abstractions\Safir.Messaging.Abstractions.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <ProtoCache>.cache</ProtoCache>
  </PropertyGroup>

  <!-- https://github.com/grpc/grpc/blob/master/src/csharp/BUILD-INTEGRATION.md -->
  <ItemGroup>
    <Protobuf Include="$(ProtoRoot)/*.proto" ProtoRoot="$(ProtoRoot)" AdditionalImportDirs="$(ProtoCache)">
      <Link>$(FileName).proto</Link>
    </Protobuf>
    <Protobuf Include="$(ProtoRoot)/agent/*.proto" ProtoRoot="$(ProtoRoot)" AdditionalImportDirs="$(ProtoCache)">
      <Link>Agent\$(FileName).proto</Link>
    </Protobuf>
    <Protobuf Include="$(ProtoRoot)/manager/*.proto" ProtoRoot="$(ProtoRoot)" AdditionalImportDirs="$(ProtoCache)">
      <Link>Manager\$(FileName).proto</Link>
    </Protobuf>
    <Protobuf Include="$(ProtoCache)/google/api/annotations.proto" GrpcServices="None" ProtoRoot="$(ProtoCache)" CompileOutputs="false">
      <SourceUrl>https://raw.githubusercontent.com/googleapis/googleapis/master/google/api/annotations.proto</SourceUrl>
      <Link>google\api\annotations.proto</Link>
    </Protobuf>
    <Protobuf Include="$(ProtoCache)/google/api/http.proto" GrpcServices="None" ProtoRoot="$(ProtoCache)" CompileOutputs="false">
      <SourceUrl>https://raw.githubusercontent.com/googleapis/googleapis/master/google/api/http.proto</SourceUrl>
      <Link>google\api\http.proto</Link>
    </Protobuf>
  </ItemGroup>
</Project>
