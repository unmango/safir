<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Product>Safir.Protos</Product>
    <Description>Generated protocol buffer types for the Safir project.</Description>
    <TargetFramework>netstandard2.1</TargetFramework>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Api.CommonProtos" />
    <PackageReference Include="Google.Protobuf" />
    <PackageReference Include="Grpc.Core.Api" />
    <PackageReference Include="Grpc.Tools" PrivateAssets="All" />
    <PackageReference Include="IsExternalInit" PrivateAssets="all" />
    <PackageReference Include="MinVer" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="$(CommonSrc)\Safir.Messaging.Abstractions\Safir.Messaging.Abstractions.csproj" />
  </ItemGroup>

  <Target Name="RefreshProtos" BeforeTargets="BeforeBuild">
    <Exec Command="dotnet grpc refresh" />
  </Target>

  <PropertyGroup>
    <ProtoCache>.cache</ProtoCache>
  </PropertyGroup>

  <!-- https://github.com/grpc/grpc/blob/master/src/csharp/BUILD-INTEGRATION.md -->
  <ItemGroup>
    <Protobuf Include="$(ProtoRoot)/*.proto" ProtoRoot="$(ProtoRoot)" AdditionalImportDirs="$(ProtoCache)">
      <Link>$(FileName).proto</Link>
    </Protobuf>
    <Protobuf Include="$(ProtoRoot)/agent/*.proto" ProtoRoot="$(ProtoRoot)" AdditionalImportDirs="$(ProtoCache)">
      <Link>Agent\$(FileName).proto</Link>
    </Protobuf>
    <Protobuf Include="$(ProtoRoot)/manager/*.proto" ProtoRoot="$(ProtoRoot)" AdditionalImportDirs="$(ProtoCache)">
      <Link>Manager\$(FileName).proto</Link>
    </Protobuf>
    <!-- The dotnet-grpc tool does not seem to resolve MSBuild properties, so we are forced to hardcode the path in the `Include` -->
    <Protobuf Include=".cache/google/api/annotations.proto" GrpcServices="None" ProtoRoot="$(ProtoCache)" CompileOutputs="false">
      <SourceUrl>https://raw.githubusercontent.com/googleapis/googleapis/master/google/api/annotations.proto</SourceUrl>
      <Link>google\api\annotations.proto</Link>
    </Protobuf>
    <!-- The dotnet-grpc tool does not seem to resolve MSBuild properties, so we are forced to hardcode the path in the `Include` -->
    <Protobuf Include=".cache/google/api/http.proto" GrpcServices="None" ProtoRoot="$(ProtoCache)" CompileOutputs="false">
      <SourceUrl>https://raw.githubusercontent.com/googleapis/googleapis/master/google/api/http.proto</SourceUrl>
      <Link>google\api\http.proto</Link>
    </Protobuf>
  </ItemGroup>
</Project>
